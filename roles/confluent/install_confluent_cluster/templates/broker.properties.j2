broker.id=2
num.network.threads=3
num.io.threads=8
socket.send.buffer.bytes=102400
socket.receive.buffer.bytes=102400
socket.request.max.bytes=104857600
log.dirs=/var/lib/kafka
num.partitions=1
num.recovery.threads.per.data.dir=1
transaction.state.log.min.isr=1
log.retention.hours=168
log.segment.bytes=1073741824
log.retention.check.interval.ms=300000
zookeeper.connect=openldap.bnh.vn:2181,hieund-kafka-01.bnh.vn:2181,hieund-kafka-02.bnh.vn:2181
zookeeper.connection.timeout.ms=18000
group.initial.rebalance.delay.ms=0
confluent.balancer.enable=true

ldap.group.name.attribute=sAMAccountName
ldap.group.object.class=group
ldap.group.member.attribute=member
ldap.group.member.attribute.pattern=CN=(.*),cn=Users,dc=bnh,dc=vn
ldap.group.search.base=cn=Builtin,dc=bnh,dc=vn
ldap.user.search.scope=2
ldap.java.naming.provider.url=ldap://0.0.0.0:389
ldap.java.naming.security.authentication=simple
ldap.java.naming.security.credentials=abcxyz
ldap.java.naming.security.principal=cn=hieund,cn=Users,dc=bnh,dc=vn
ldap.user.name.attribute=sAMAccountName
ldap.user.object.class=organizationalPerson
ldap.user.search.base=cn=Users,dc=bnh,dc=vn
ldap.user.search.filter=(|(sAMAccountName=*minh*)(sAMAccountName=hieund))


listener.name.sasl_plaintext.sasl.enabled.mechanisms=PLAIN
listener.name.sasl_plaintext.plain.sasl.jaas.config=org.apache.kafka.common.security.plain.PlainLoginModule required username="hieund" password="abcxyz";
listener.name.sasl_plaintext.plain.sasl.server.callback.handler.class=io.confluent.security.auth.provider.ldap.LdapAuthenticateCallbackHandler

listeners=SASL_PLAINTEXT://:9092,BROKER://:9091
inter.broker.listener.name=SASL_PLAINTEXT
sasl.enabled.mechanisms=PLAIN,OAUTHBEARER
sasl.mechanism.inter.broker.protocol=PLAIN
authorizer.class.name=io.confluent.kafka.security.authorizer.ConfluentServerAuthorizer
confluent.authorizer.access.rule.providers=CONFLUENT,ZK_ACL
confluent.metadata.server.advertised.listeners=http://hieund-kafka-02.bnh.vn:8090
confluent.metadata.server.authentication.method=BEARER
confluent.metadata.server.listeners=http://0.0.0.0:8090
confluent.metadata.server.token.key.path=/opt/kafka/tokenKeypair.pem
listener.name.broker.oauthbearer.sasl.login.callback.handler.class=io.confluent.kafka.server.plugins.auth.token.TokenBearerServerLoginCallbackHandler
listener.name.broker.oauthbearer.sasl.server.callback.handler.class=io.confluent.kafka.server.plugins.auth.token.TokenBearerValidatorCallbackHandler
listener.name.broker.oauthbearer.sasl.jaas.config=org.apache.kafka.common.security.oauthbearer.OAuthBearerLoginModule required publicKeyPath="/opt/kafka/public.pem";
listener.security.protocol.map=SASL_PLAINTEXT:SASL_PLAINTEXT,BROKER:SASL_PLAINTEXT
listener.name.broker.sasl.enabled.mechanisms=OAUTHBEARER
super.users=User:hieund

offsets.topic.replication.factor=2
transaction.state.log.replication.factor=2
confluent.metrics.reporter.topic.replicas=2
confluent.license.topic.replication.factor=2
confluent.metadata.topic.replication.factor=2
confluent.security.event.logger.exporter.kafka.topic.replicas=2
confluent.balancer.topic.replication.factor=2
default.replication.factor=2
